AddDefaultCharset utf-8

# Prevent Directoy listing 
Options -Indexes

# Prevent Direct Access to files
<FilesMatch "\.(db|iblock|log)">
	Order allow,deny
</FilesMatch>

# SEO URL Settings
RewriteEngine On
RewriteBase /

#heplers redirecting
RewriteRule ^sitemap.xml$ /index.php?helper=sitemap [L]
RewriteRule ^robots.txt$ /index.php?helper=robots [L]
RewriteRule ^rss/(.+)$ /index.php?helper=rss&stream=$1 [L]
RewriteRule ^thumb/(\d+)_(\d+)/(.+)$ /index.php?helper=thumb&width=$1&height=$2&src=$3 [L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ $1 [NC,R=301,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?p=$1 [QSA]

ErrorDocument 404 /error
ErrorDocument 403 /error

<IfModule mod_php5.c>
	php_flag magic_quotes_gpc 0
	php_flag display_errors 1
</IfModule>

## optimization below
<IfModule mod_expires.c>
	ExpiresActive On
	ExpiresDefault "access plus 604800 seconds"
</IfModule>

<IfModule mod_headers.c>
<FilesMatch "\.(ico|jpe?g|png|gif|swf|css|js)$">
#	Header set Cache-Control "max-age=604800, public"
</FilesMatch>
<FilesMatch "\.(x?html?)$">
#	Header set Cache-Control "max-age=86400, private, must-revalidate"
</FilesMatch>
</IfModule>

<ifModule mod_headers.c>
<filesMatch "\.(ico|pdf|flv|jpe?g|png|gif|js|css|swf)$">
	Header unset ETag
	FileETag None
	Header unset Last-Modified
</filesMatch>
</ifModule>

<IfModule mod_gzip.c>
	mod_gzip_on Yes
	mod_gzip_dechunk Yes
	mod_gzip_item_include file \.(html?|txt|css|js|php)$
	mod_gzip_item_include mime ^text/.*
	mod_gzip_item_include mime ^application/x-javascript.*
	mod_gzip_item_include mime ^image/.*
	mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</IfModule>